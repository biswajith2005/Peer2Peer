rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: readable by anyone, writable only by owner
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Skills: readable by anyone, create by authenticated users, update/delete only by creator
    match /skills/{skillId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.mentorId == request.auth.uid;
    }

    // Doubts (queries): readable by anyone, create by authenticated users
    match /doubts/{doubtId} {
      allow read: if true;
      allow create: if request.auth != null;

      // answers as subcollection: only authenticated users can add answers
      match /answers/{answerId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
    }

    // Skill requests: create by authenticated users; read/update/delete only by sender or recipient
    match /skillRequests/{reqId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && (request.auth.uid == resource.data.fromUserId || request.auth.uid == resource.data.toUserId);
    }

    // Mock tests: created by authenticated users; only owner can read/update/delete
    match /mockTests/{id} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}